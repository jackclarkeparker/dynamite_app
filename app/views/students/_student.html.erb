<div id="<%= dom_id student %>">
  <p>
    <strong>Region:</strong>
    <%= student.region.name %>
  </p>

  <p>
    <strong>First name:</strong>
    <%= student.first_name %>
  </p>

  <% if student.preferred_name && student.preferred_name.length > 0 %>
    <p>
      <strong>Preferred name:</strong>
      <%= student.preferred_name %>
    </p>
  <% end %>

  <p>
    <strong>Last name:</strong>
    <%= student.last_name %>
  </p>

  <p>
    <strong>Year group:</strong>
    <%= student.year_group %>
  </p>

  <p>
    <strong>Age:</strong>
    <%= "#{student.age} #{'year'.pluralize(student.age)} old"%>
  </p>

  <p>
    <strong>Birthday:</strong>
    <%= student.birthday %>
  </p>

  <p>
    <strong>Gender:</strong>
    <%= student.gender %>
  </p>

  <p>
    <strong>Instrument:</strong>
    <%= student.keyboard %>
  </p>
</div>
