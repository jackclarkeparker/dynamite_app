<h1>Students</h1>

<div id="students">
  <% @students_by_region.each_pair do |region, students| %>
    <h2><%= region %></h2>
    <div class="horizontal-list-set">
      <% students.each do |student| %>
        <ul class="list-group list-group-horizontal">
          <li class="list-group-item"><%= student.full_name %></li>
          <li class="list-group-item">
            <strong>Primary Contact:</strong>
            <%= link_to student.primary_contact, contact_path(student.primary_contact) %>
            <span class="primary-contact-relation"><%= try_display_primary_contact_relation(student) %></span>
          </li>
          <li class="list-group-item">Year <%= student.year_group %></li>
          <li class="list-group-item">
            <%= link_to "Details", student_path(student) %>
          </li>
        </ul>
      <% end %>
    </div>
  <% end %>
</div>

<%= link_to "New student", new_student_path %>
