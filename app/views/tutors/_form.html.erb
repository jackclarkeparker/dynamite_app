<%= form_with(model: tutor) do |form| %>
  <% if tutor.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(tutor.errors.count, "error") %> prohibited this tutor from being saved:</h2>

      <ul>
        <% tutor.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row gx-5 row-cols-3">    
    <div class="col">
      <%= form.label :preferred_name, style: "display: block" %>
      <%= form.text_field :preferred_name %>
    </div>

    <div class="col">
      <%= form.label :first_name, style: "display: block" %>
      <%= form.text_field :first_name %>
    </div>

    <div class="col">
      <%= form.label :last_name, style: "display: block" %>
      <%= form.text_field :last_name %>
    </div>

    <div class="col">
      <%= form.label :email_address, style: "display: block" %>
      <%= form.text_field :email_address %>
    </div>

    <div class="col">
      <%= form.label :phone_number, style: "display: block" %>
      <%= form.text_field :phone_number %>
    </div>

    <div>
      <%= form.label :region, style: "display: block" %>
      <%= form.select :region_id, regions_select(tutor) %>
    </div>

    <div class="col">
      <%= form.label :delivery_address, style: "display: block" %>
      <%= form.text_field :delivery_address %>
    </div>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
