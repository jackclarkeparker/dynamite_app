<%= form_with(model: venue) do |form| %>
  <% if venue.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(venue.errors.count, "error") %> prohibited this venue from being saved:</h2>

      <ul>
        <% venue.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label 'Region', style: "display: block" %>
    <%= form.select :region_id, regions_select(venue) %>
  </div>

  <div>
    <%= form.label :address, style: "display: block" %>
    <%= form.text_field :address %>
  </div>
  
  <div>
    <%= form.label :standard_price, style: "display: block" %>
    <%= form.number_field :standard_price, in: 1.0..50.0,
      step: 0.5, value: 0 %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
